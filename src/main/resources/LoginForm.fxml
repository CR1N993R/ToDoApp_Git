<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>


<AnchorPane prefHeight="610.0" prefWidth="990.0" xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ch.denis.todoapp.frontend.LoginScene">
    <ImageView fitHeight="625.0" fitWidth="1012.0" layoutX="-10.0" layoutY="-12.0">
        <Image url="@Background_Login.jpg"/>
    </ImageView>
    <AnchorPane layoutX="306.0" layoutY="171.0" prefHeight="262.0" prefWidth="387.0"
                style="-fx-background-color: #0a0f12; -fx-border-color: #0e1e4d;">
        <Label layoutX="154.0" layoutY="14.0" text="Login" textFill="WHITE">
            <font>
                <Font name="System Bold" size="30.0"/>
            </font>
        </Label>
        <AnchorPane layoutX="161.0" layoutY="55.0" prefHeight="9.0" prefWidth="67.0"
                    style="-fx-background-color: #0e1e4d;"/>
        <PasswordField fx:id="password" layoutX="90.0" layoutY="150.0" prefHeight="25.0" prefWidth="209.0"
                       promptText="Password" style="-fx-background-color: #0a0f12; -fx-border-color: #0e1e4d;"/>
        <TextField fx:id="username" layoutX="90.0" layoutY="106.0" prefHeight="25.0" prefWidth="209.0"
                   promptText="Username" style="-fx-background-color: #0a0f12; -fx-border-color: #0e1e4d;"/>
        <Button layoutX="141.0" layoutY="200.0" mnemonicParsing="false" onAction="#login" prefHeight="25.0"
                prefWidth="105.0" style="-fx-background-color: #0e1e4d;" text="Login" textFill="WHITE"/>
        <ImageView fitHeight="25.0" fitWidth="28.0" layoutX="62.0" layoutY="106.0">
            <Image url="@User-Icon.png"/>
        </ImageView>
        <ImageView fitHeight="25.0" fitWidth="36.0" layoutX="58.0" layoutY="150.0">
            <Image url="@Lock-Icon.png"/>
        </ImageView>
    </AnchorPane>
</AnchorPane>
